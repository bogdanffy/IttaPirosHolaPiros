<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.example.bogdan.ittapirosholapiros.JatekActivity">

    <TextView
        android:id="@+id/maxPt_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/kartyak_linearLayout"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="Rekord: 0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/kartyak_linearLayout"
        >

        <ImageView
            android:id="@+id/elsoKartya_img"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/hatter1"
            />
        <ImageView
            android:id="@+id/masodikKartya_img"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/hatter1"
            />
        <ImageView
            android:id="@+id/harmadikKartya_img"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/hatter1"
            />

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kartyak_linearLayout"
        android:layout_above="@+id/kartyak_linearLayout"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFFFF"
        android:shadowColor="#A8A8A8"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:layout_margin="5dp"
        android:text="Ãšjra sorsol"
        android:textSize="25dp"
        android:id="@+id/ujJatek_btn"/>


</RelativeLayout>